
<div class="container">
  <h1> <% @cocktail.name %></h1>

  <h4>Ingredients</h4>
    <ul class="list-group">
      <% @cocktail.doses.each do |dose| %>
        <li>
          <p><%= dose.description %><%= dose.ingredient.name %>
              <%= link_to dose_path(dose),
              method: :delete,
              data: { confirm: "Are you sure?" } do %>
                <i class='far fa-trash-alt'></i>
              <% end %>
        </p>
       </li>
      <% end %>
    </ul>

  <h3><%= link_to 'Add a dosed ingredient', new_cocktail_dose_path(@cocktail), class: 'btn btn-outline-primary mr-3'%></h3>
   <%= link_to 'Back', cocktails_path %>
</div>
