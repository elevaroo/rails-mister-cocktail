
<div class="bg-show">
  <div class="container">
    <h1> <%= @cocktail.name %></h1>

    <h4>Ingredients</h4>
        <% @cocktail.doses.each do |dose| %>
            <p><i class="fas fa-cocktail"></i> <%= dose.description %> <%= dose.ingredient.name %>
                <%= link_to dose_path(dose),
                method: :delete,
                data: { confirm: "Are you sure?" } do %>
                  <i class='far fa-trash-alt'></i>
                <% end %>
          </p>
        <% end %>

    <h3><%= link_to 'Add a dosed ingredient', new_cocktail_dose_path(@cocktail), class: 'btn btn-outline-primary mr-3'%></h3>
     <%= link_to 'Back', cocktails_path %>
  </div>
</div>
